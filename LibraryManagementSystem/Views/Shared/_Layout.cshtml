<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jones Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")            
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/Resources/Images/bookIcon.png" />
</head>
<body>
    <div class="container">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>                   
                    @Html.ActionLink("Jones Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:blue;" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Make a rent", "EditRent/0", "Rents")</li>
                        <li>@Html.ActionLink("Rents", "Index", "Rents")</li>
                        <li>@Html.ActionLink("Return book", "ReturnBook", "Books")</li>
                        <li>@Html.ActionLink("Books", "Index", "Books")</li>
                        <li>@Html.ActionLink("Authors", "Index", "Authors")</li>
                        <li>@Html.ActionLink("Publishers", "Index", "Publishers")</li>
                        <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles")</li>                        
                    </ul>

                    @if (LibraryManagementSystem.Models.AuthenticationManager.LoggedUser != null)
                    {
                        <div class="nav navbar-right" style="padding-top:1.35%;">
                            <a class="dropdown-toggle label" data-toggle="dropdown" href="#" style="font-size:1em; color:black;">
                                Welcome, @LibraryManagementSystem.Models.AuthenticationManager.LoggedUser.FirstName
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="/Home/Logout">Log out</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>

        @{
            Html.RenderPartial("~/Views/Shared/_Login.cshtml", ViewData["HomeLoginVM"]);
        }

        @if (LibraryManagementSystem.Models.AuthenticationManager.LoggedUser == null)
        {
            @RenderBody()
        }
        else
        {
            <div id="page-wrapper" style="min-height:619px; ">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        }

    </div>    

    @Scripts.Render("~/bundles/jquery") 
    <script src="~/Scripts/jquery-ui.min.js"></script>    
    <script src="~/Scripts/datepicker.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
